{
  // Compiler options for the TypeScript project
  "compilerOptions": {
    "composite": true, // Enables project references
    "module": "esnext", // Specifies the module code generation
    "moduleResolution": "node" // Resolves modules in Node.js style
  },
  // Files to include in the compilation
  "include": ["vite.config.ts"] // Includes the Vite configuration file
}
